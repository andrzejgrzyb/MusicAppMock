<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:context="pl.com.andrzejgrzyb.musicappmock.MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="MainActivity. This is the home screen." />

<Button
    android:id="@+id/now_playing_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Now playing" />

<Button
    android:id="@+id/music_library_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Music library" />

<Button
    android:id="@+id/music_store_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Online music store" />

<Button
    android:id="@+id/search_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Search" />

</LinearLayout>
